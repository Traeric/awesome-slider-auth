.simple-wrap
    width 100%
    box-sizing border-box
    transition all .5s
    .img-area
        width 100%
        height (150 / 16)em
        background-size cover
        margin-bottom 10px
        overflow hidden
        border-radius 6px
        span
            font-size (12 / 16)em
            color #fff
            user-select none
