.as-code-block-wrap
    --tag-color #f92672
    --attr-color #a6e22e
    --val-color #e6db74
    --key-word-color #8481ff
    --func-color #66d9ef
    --normal-color #f8f8f2
    --tag-code-color #f92659
    --attr-code-color #a6e22e
    --number-color #90908a
    --number-border-color #464741
    --code-background-color #272822
    --base-color #f8f8f2

    background-color var(--code-background-color)
    padding 5px 0
    width 100%
    overflow-x auto
    white-space nowrap
    color var(--base-color)
    .as-code-block-code-area
        .ascb-line
            height 35px
            line-height 35px
            .ascb-number
                display inline-block
                width 45px
                text-align right
                margin-right 10px
                user-select none
                border-right 1px solid var(--number-border-color)
                color var(--number-color)
                padding-right 10px
            .ascb-code
                display inline-block
                .ascb-tab 
                    margin-left 10px
                .ascb-tag
                    color var(--tag-color)
                .ascb-attr
                    color var(--attr-color)
                .ascb-val
                    color var(--val-color)
                .ascb-key-word
                    color var(--key-word-color)
                .ascb-func
                    color var(--func-color)
                .ascb-normal
                    color var(--normal-color)
                .ascb-tag-code
                    color var(--tag-code-color)
                .ascb-attr-code
                    color var(--attr-code-color)


