.text-slider-wrap
    width 100%
    box-sizing border-box
    overflow hidden
    background-color transparent
    transition opacity .5s
    position relative
    overflow hidden
    .bg
        position relative
        overflow hidden
        .bg-canvas
            width 100%
            border-radius 4px
            overflow hidden
            margin-bottom 5px
            cursor pointer
        .dot
            position absolute
            color #fff
            font-size 12px !important
            width 20px
            height 20px
            display flex
            justify-content center
            align-items center
            border-radius 50%
            border 2px solid #fff
            background-color rgb(75, 92, 196)
            cursor pointer
    .auth-bar
        height 38px
        line-height 38px
        border 1px solid rgb(233, 233, 233)
        border-radius 4px
        background-color rgb(247, 247, 247)
        text-align left
        padding 0 10px
        .text
            color #000
        .tips
            color rgb(245, 106, 0)
        .word
            color #000
            margin-left 10px
            font-weight bolder
            letter-spacing 5px
    .error-tips
        position absolute
        bottom 0
        left 0
        height 38px
        line-height 38px
        width calc(100% - 2px)
        border 1px solid #F56C6C
        background-color #fef0f0
        border-radius 4px
        color #F56C6C
        font-size 14px
        display none
        text-align center
