.click-btn
    width 100%
    height 36px
    border 1px solid #67c23a
    border-radius 5px
    cursor pointer
    background-color #67c23a4d
    position relative
    font-size 16px
    display flex
    align-items center
    justify-content center
    .asa-icon
        color #67c23a
        width 1.1em
        height 1.1em
        vertical-align sub
        margin-right 3px
    span
        user-select none
        color #67c23a
        font-size (14 / 16)em
    &:hover
        .auth-area
            opacity 1
            visibility visible
    .auth-area
        position absolute
        bottom -1px
        left -1px
        z-index 1000
        opacity 0
        visibility hidden
        transition all .5s
        width calc(100% + 2px)
        