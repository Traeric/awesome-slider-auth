.as-scratch-slider
    .bg
        background-size 100% 100%
        overflow hidden
        position relative
        margin-bottom 10px
        border-radius 5px
        .asa-refresh-panel
            bottom 0
        canvas
            position absolute
            height 100%
            width 100%
            top 0
            left 0
        .shadow-canvas
            cursor pointer
    .scratch-slider-bar
        text-align left
        padding 0 10px
        user-select none
