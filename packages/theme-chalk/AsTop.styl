.as-top
    position fixed
    height 40px
    width 40px
    overflow hidden
    display flex
    justify-content center
    align-items center
    cursor pointer
    .default
        height 100%
        width 100%
        border-radius 50%
        background-color rgba(0, 0, 0, .3)
        display flex
        justify-content center
        align-items center
        color #fff
        &:hover
            background-color rgba(0, 0, 0, .5)
        i
            font-size 20px
