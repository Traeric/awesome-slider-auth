.as-rotate-slider-wrap
    width 100%
    .as-rotate-slider-bg
        position relative
        .as-rotate-slider-canvas
            width 100%
            margin-bottom 5px
            border-radius 5px
        .as-rotate-slider-rotate
            position absolute
            // border-radius 255px
            // border 2px solid #323232
            box-shadow 0 0 12px #78e183 inset
    .as-rotate-slider-bar
        height 40px
        line-height 40px
        text-align center
        background-color #f7f7f7
        border 1px solid #e9e9e9
        border-radius 5px
        position relative
        .as-rotate-slider-progress
            position absolute
            top -1px
            left -1px
            height 40px
            background-color #d0fbee
            border 1px solid #75eeca
            border-radius 5px
            width 10px
            z-index 100
        .as-rotate-slider-tips
            color #a9a9a9
            user-select none
            font-size 14px
        .as-rotate-slider
            height 40px
            line-height 40px
            text-align center
            background-color #fff
            border 1px solid #02d0bd
            box-shadow 1px 1px 6px #e1e1e1
            border-radius 5px
            width 60px
            position absolute
            left -1px
            top -1px
            z-index 101
            cursor move
            i
                color #02d0bd
                font-size 22px
                transform rotate(180deg)
                display inline-block
